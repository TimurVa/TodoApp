<Application x:Class="ToDoApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Themes/LightTheme.xaml"/>

                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/DrawingImages.xaml"/>
                <ResourceDictionary Source="Resources/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Resources/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="Resources/ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="Resources/ToggleButtonStyles.xaml"/>
                <ResourceDictionary Source="Resources/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="Resources/MenuStyles.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
         
    </Application.Resources>
</Application>
